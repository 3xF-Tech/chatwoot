# =============================================================================
# AI Engine - Production Environment Variables
# Copie para .env.production e configure os valores
# =============================================================================

# Registry e Versao
# Exemplo GHCR: ghcr.io/seu-usuario/chatwoot/ai-engine
REGISTRY=registry.3xf.app
VERSION=0.2.0

# Dominio (para Traefik)
DOMAIN=3xf.app

# RabbitMQ
RABBITMQ_USER=ai_engine
RABBITMQ_PASS=CHANGE_ME_STRONG_PASSWORD

# OpenAI
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-3.5-turbo

# Chatwoot
CHATWOOT_BASE_URL=https://crm.3xf.app
CHATWOOT_API_TOKEN=xxxx

# Langfuse
LANGFUSE_PUBLIC_KEY=pk-lf-xxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxx
LANGFUSE_HOST=https://langfuse.3xf.app

# Workers (ajustar conforme demanda)
WORKER_REPLICAS=2
MAX_RETRY_ATTEMPTS=3